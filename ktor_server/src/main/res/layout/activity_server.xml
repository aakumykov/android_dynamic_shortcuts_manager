<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServerActivity" >

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/serverAddressInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="адрес:порт сервера" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#29B6F6"
        android:text="Запустить службу" />

    <Button
        android:id="@+id/stopServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC407A"
        android:text="Остановить службу" />

    <Button
        android:id="@+id/connectToWebsocketServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#26A69A"
        android:text="Подключиться к WS-серверу"
        app:icon="@drawable/ic_websocket"
        app:iconGravity="textEnd"/>

    <TextView
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Сообщение об ошибке"
        android:textAlignment="center"
        android:padding="8dp"
        android:textSize="16sp"
        android:textColor="#f00"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>