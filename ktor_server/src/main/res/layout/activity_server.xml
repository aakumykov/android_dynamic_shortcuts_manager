<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServerActivity" >

    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#29B6F6"
        android:text="Запустить службу"
        android:visibility="gone" />

    <Button
        android:id="@+id/stopServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC407A"
        android:text="Остановить службу"
        android:visibility="gone" />

    <Button
        android:id="@+id/connectToWebsocketServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#26A69A"
        android:text="Подключиться к WS-серверу"
        app:icon="@drawable/ic_websocket"
        app:iconGravity="textEnd"/>

</LinearLayout>